<!DOCTYPE html="{{locale}}">
    {{> header}}
    <body>
        {{> navbar}}
        <br>
        <h1 align="center" id="header">{{Edit Pokemon Subscription}} {{id}}</h1>
        <br>
        <div class="w-75" style="float: none; margin: 0 auto;">
            <form action="/api/pokemon/edit/" method="post">
                <div class="form-group">
                    {{Pokemon}}
                    <select name="pokemon" class="custom-select" required>
                        <option value="" selected disabled hidden>{{Choose a Pokemon}}</option>
                        {{#pokemon}}
                        <option value="{{pokemon_id}}" {{#selected}}selected{{/selected}}>{{name}}</option>
                        {{/pokemon}}
                    </select>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            {{Form}}
                             <input type="text" class="form-control" name="form" value="" placeholder="i.e. Sunny">
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                             {{Gender}}
                            <select name="gender" class="custom-select" required>
                                {{#genders}}
                                <option value="{{id}}">{{name}}</option>
                                {{/genders}}
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            {{Minimum IV}}
                             <input type="text" class="form-control" name="min_iv" value="" placeholder="i.e. 0">
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                           {{Maximum IV}}
                            <input type="text" class="form-control" name="max_iv" value="" placeholder="i.e. 100">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            {{Minimum Level}}
                            <input type="text" class="form-control" name="min_lvl" value="" placeholder="i.e. 0">
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            {{Maximum Level}}
                            <input type="text" class="form-control" name="max_lvl" value="" placeholder="i.e. 35">
                        </div>
                    </div>
                </div>
                <div class="row">
                <div class="form-group">
                             {{Geotype}}
                            <select name="geotype" class="custom-select" required>
                                {{#locationselect}}
                                <option value="{{id}}">{{name}}</option>
                                {{/locationselect}}
                            </select>
                        </div>
                </div>
                <div class="form-group">
                    {{City}}
                    <select name="city" class="custom-select" required>
                        <option value="" selected disabled hidden>{{Choose a City}}</option>
                        <option value="all">All</option>
                        {{#cities}}
                        <option value="{{name}}" id="g_{{guild}}" {{#selected}}selected{{/selected}} hidden>{{name}}</option>
                        {{/cities}}
                    </select>
                </div>
                <br>
                <input type="hidden" id="guild_id" name="guild_id">
                <button type="submit" class="btn btn-primary">{{Save}}</button>
                <br>
            </form>
            <form action="/api/pokemon/delete/{{pokemon_id}}" method="post">
                <button type="submit" class="btn btn-danger" onclick="return confirm('{{Are you sure that you want to delete pokemon subscription}} {{id}}?');">{{Delete}}</button>
            </form>
        </div>
    </body>
</html>

<script type='text/javascript' src="/js/pokemon-list.js"></script>
<script type='text/javascript'>
    if ("{{style}}" === 'dark') {
        $('body').css('background-color', 'rgb(33, 37, 41)');
        $('body').css('color', 'rgb(255, 255, 255)');
    }
    $('#guild_id').val(guildId);
    const guilds = document.querySelectorAll('*[id^="g_' + guildId + '"]');
    if (guilds) {
        guilds.forEach(guild => guild.hidden = false);
    }
</script>